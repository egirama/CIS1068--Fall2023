package cis1068;

//Egi Rama
//Saturday September 9th
//Assignment 2. Get you a cat 

//This program prints out lines from a song named Bought Me a Cat
public class Song {
	public static void main(String[] args) {
		firstVerse();
		secondVerse();
		thirdVerse();
		fourthVerse();
		fifthVerse();
		sixthVerse();
		}		
	//Cat verse
	public static void cat() {
		System.out.println("Cat goes fiddle-i-fee.");
	}
	//Hen verse 
	public static void hen() {
		System.out.println("Hen goes chimmy-chuck, chimmy-chuck,");	
		cat();
	}	
	//Duck verse
	public static void duck() {
		System.out.println("Duck goes quack, quack,");
		hen();
	}	
	//Goose verse
	public static void goose() {
			System.out.println("Goose goes hissy, hissy,");
		duck();
		}		
	//Sheep verse
	public static void sheep() {
		System.out.println("Sheep goes baa, baa,");
		goose();
		}	
    //First verse
	public static void firstVerse() {
		System.out.println("Bought me a cat and the cat pleased me,\n"
				+ "I fed my cat under yonder tree.");
		cat();
		System.out.println("\n");
	}	
	//Second verse
	public static void secondVerse() {
		System.out.println("Bought me a hen and the hen pleased me,\n"
				+ "I fed my hen under yonder tree.");
		hen();
		System.out.println("\n");
	}	
	//Third verse 
	public static void thirdVerse() {
		System.out.println("Bought me a duck and the duck pleased me,\n"
				+ "I fed my duck under yonder tree.");
		duck();
		System.out.println("\n");
		}
	//Fourth verse
	public static void fourthVerse() {
		System.out.println("Bought me a goose and the goose pleased me,\n"
				+ "I fed my goose under yonder tree.");
		goose();
		System.out.println("\n");
		}
	//Fifth verse
	public static void fifthVerse() {
		System.out.println("Bought me a sheep and the sheep pleased me,\n"
				+ "I fed my sheep under yonder tree.");
		sheep();
		System.out.println("\n");
	}
	//Sixth verse
		public static void sixthVerse() {
		System.out.println("Bought me a pig and the pig pleased me,\n"
					+ "I fed my pig under yonder tree.\n"
					+ "Pig goes oink, oink,");
		sheep();
		System.out.println("\n");
		}
}
	
